@page
@model ChangePasswordModel
@{
    Layout = null;
}

<div id="divAlterarSenha">
    <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="/Account/ChangePassword" data-ajax-begin='blockDivForAjaxRequest("divAlterarSenha")' data-ajax-complete='unblockDivForAjaxRequest("divAlterarSenha")' data-ajax-success='handleUserInteractionInBootboxFormSubmit("divAlterarSenha")' data-ajax-failure="handleUserInteractionInAjaxFailure">
        <div class="form-group has-feedback">
            <input asp-for="Current" type="password" class="form-control" placeholder="Senha Atual">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Current" style="font-size: 10px; color: #a94442;"></span>
        </div>

        <div class="form-group has-feedback">
            <input asp-for="New" type="password" class="form-control" placeholder="Nova Senha">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="New" style="font-size: 10px; color: #a94442;"></span>
        </div>

        <div class="form-group has-feedback">
            <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirmar Nova Senha">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Confirm" style="font-size: 10px; color: #a94442;"></span>
        </div>

        <button class="btn btn-default btn-block" type="submit" data-submit-ajaxform-pace>
            <i class="fa fa-key"></i>
            Alterar Senha
        </button>
    </form>
</div>