@using GISModel.Entidades
@using GISModel.DTO.AtividadeAlocadaFuncao
@model List<AtividadeAlocadaFuncaoViewModel>


@{
    /**/


    if (Model.Count > 0)
    {

        <div class="row">
            <div class="col-xs-12">
                <div class="clearfix">
                    <div class="pull-right tableTools-container"></div>
                </div>

                <div>
                    <table id="tablePerfisPorMenu" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">
                                    &nbsp;
                                </th>
                                <th>Atividade</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (AtividadeAlocadaFuncaoViewModel item in Model)
                            {
                                <tr>
                                    <td class="center">
                                        <label class="pos-rel">

                                            @{
                                                string PossuiOMenu = string.Empty;
                                                if (item.AlocaAtividade)
                                                {
                                                    PossuiOMenu = " checked=\" ";
                                                }
                                            }

                                            <input type="checkbox" onclick="SalvarAtividade(this.checked, '@item.IDAtividade','@item.IDAlocacao','@item.IDFuncao');" @PossuiOMenu class="ace">
                                            <span class="lbl"></span>
                                        </label>
                                    </td>

                                    <td>@item.Descricao</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="error-container" style="margin: 0;">
                    <div class="well">
                        <h4 class="blue" style="margin: 0;">
                            <i class="ace-icon fa fa-slack bigger-110"></i>
                            Nenhum perfil encontrado
                        </h4>
                    </div>
                </div>
            </div><!-- /.col -->
        </div>
    }

}

