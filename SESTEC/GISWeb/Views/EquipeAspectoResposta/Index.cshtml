

@using GISModel.Entidades

@{
    ViewBag.Title = "Lista de Equipes";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Selecione sua Equipe
            <a href="@Url.Action("Novo", "Equipe")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Nova Equipe
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

        @{
            Html.RenderPartial("_MensagensDeRetorno");
        }

        @if (ViewBag.Equipe != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            @*<th width="100px"></th>*@
                            <th width="300px">Nome da Imagem</th>
                            <th>Local</th>
                            <th>Processo</th>
                            <th>Atividade</th>
                            <th width="89px">Questionário</th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (Equipe item in ViewBag.Equipe)
                        {
                            <tr id="linha-@item.IDEquipe">
                                @*<td>
                                        <img src="/Images/EstabelecimentoImagens/@iImagens.IDEstabelecimentoImagens/@iImagens.Imagem" alt="Estabelecimento" width="90px" />
                                    </td>*@
                                <td>@item.NomeDaEquipe</td>
                                <td>@item.LocalTrablho</td>
                                <td>@item.Processo</td>
                                <td>@item.ResumoAtividade</td>


                                @*<td class="hidden-480">@iImagens.NomeDaImagem</td>*@
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        @*<a class="blue" href="#" onclick="BuscarDetalhesEmpresa('@iImagens.IDEstabelecimentoImagens'); return false;">
                                                <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                            </a>*@

                                        @*<a href='@Url.Action("Novo", "EquipeAspectoResposta", new { id = item.IDEquipe,nome=item.NomeDaEquipe })' class="green">
                                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                                            </a>*@

                                        <a class="red" href="#" onclick="Questionario('@item.IDEquipe');">
                                            <i class="fa fa-book fa-fw" aria-hidden="true"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                            <div class="inline pos-rel">
                                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                                                                    

                                                    <li>
                                                        <a class="red" href="#" onclick="Questionario('@item.IDEquipe');">
                                                            <i class="fa fa-book fa-fw" aria-hidden="true"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 align-center">
                    @*<button class="btn btn-info" id="btnSalvar" type="submit">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Salvar
                        </button>
                        &nbsp;
                        <button class="btn btn-warning" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Limpar
                        </button>*@
                    &nbsp;
                    <a class="btn" href="javascript:history.back()">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        Voltar
                    </a>
                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")


    <script src="~/Scripts/Custom/EquipeAspectoResposta/Lista.js"></script>
    <script src="~/Scripts/Custom/EquipeAspectoResposta/Novo.js"></script>

}
